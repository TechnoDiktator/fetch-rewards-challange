{
    "swagger": "2.0",
    "info": {
        "title": "Receipt Processor API",
        "description": "This API allows users to process receipts and retrieve reward points. PLEASE CONTACT ME IF YOU LIKE IT  +91 7534099359",
        "version": "1.0",
        "contact": {
            "email": "rastogitarang5@gmail.com",
            "url": "https://technodiktator.github.io/portfolio/"
        }
    },
    "host": "localhost:4040",
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
        "/receipts/process": {
            "post": {
                "summary": "Process a receipt",
                "description": "Submit a receipt to process it and calculate reward points.",
                "responses": {
                    "200": {
                        "description": "Receipt processed successfully"
                    },
                    "400": {
                        "description": "Invalid receipt data"
                    }
                }
            }
        },
        "/receipts/points/{id}": {
            "get": {
                "summary": "Get reward points for a receipt",
                "description": "Retrieve the reward points for a specific receipt using its ID.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully retrieved reward points"
                    },
                    "404": {
                        "description": "Receipt not found"
                    }
                }
            }
        }
    }
}
